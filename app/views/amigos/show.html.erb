<p id="notice"><%= notice %></p>

<h1><%=@amigo.amigo.NOMBRE_PHOTOLOG%></h1>
<%if current_usuario !=nil%>
	<h3><%=link_to "Eliminar amigo", "/usuario/#{current_usuario.id}/amigos/#{@amigo.id}", method: :delete%></h3>
<%end%>
<div class = "col-md">
	<%amigo = @amigo.amigo%>
	<%if amigo.fotos.last!=nil%>
		<%amigo.fotos.each do |f|%>
			<div class="field">	
				<%= link_to "Ver", f %>
				<%= image_tag f.imagen.url(:medium)%>
			</div>
		<%end%>
	<%else%>
		Tu amigo no ha subido fotos
	<%end%>
</div>

<%if current_usuario ==nil%>
	<%= link_to 'Volver', root_path %>	
<%else%>	
	<%= link_to 'Volver', "/usuarios/#{current_usuario.id}" %>
<%end%>

