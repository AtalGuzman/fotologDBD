<div class = "center-md col-md-offset-4">
    <div class = "col-lg-6 center-md be-magenta white">
    <h1>Iniciar sesión</h1><br>
    <%= form_for(resource, class:"form-group", as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true , placeholder:"Ingresa tu email", class:"form-control"%>
      </div>
        <br>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Ingresa tu contraseña" %>
      </div>
        <br>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
          <br>
      <div class="actions">
        <%= f.submit "iniciar sesión",class:"btn btn-default" %>
      </div>
          <br>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
</div>